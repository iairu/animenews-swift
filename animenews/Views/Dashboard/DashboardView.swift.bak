import SwiftUI

struct DashboardView: View {
    @StateObject private var viewModel = DashboardViewModel()

    // Define the grid layout: two columns of flexible width.
    private let columns: [GridItem] = [
        GridItem(.flexible()),
        GridItem(.flexible())
    ]

    var body: some View {
        ScrollView {
            if let errorMessage = viewModel.errorMessage {
                VStack(spacing: 12) {
                    Image(systemName: "wifi.exclamationmark")
                        .font(.system(size: 50))
                        .foregroundColor(Theme.mutedForeground)
                    Text(errorMessage)
                        .foregroundColor(Theme.mutedForeground)
                        .multilineTextAlignment(.center)
                        .padding(.horizontal)
                    Button("Retry") {
                        Task {
                            await viewModel.fetchDashboardData()
                        }
                    }
                    .buttonStyle(.bordered)
                    .tint(Theme.accent)
                }
                .frame(maxWidth: .infinity, minHeight: 400)
            } else if viewModel.isLoading && viewModel.trendingAnime.isEmpty {
                ProgressView("Fetching Dashboard Data...")
                    .frame(maxWidth: .infinity, minHeight: 400)
            } else {
                VStack(spacing: 20) {
                    activityRings
                    
                    LazyVGrid(columns: columns, spacing: 20) {
                        trendingChart
                        trendingList
                    }
                }
                .padding()
            }
        }
        .background(Theme.background.ignoresSafeArea())
        .navigationTitle("Summary")
        .toolbar {
            #if os(macOS)
            ToolbarItem(placement: .navigation) {
                Button(action: {
                    NSApp.keyWindow?.firstResponder?.tryToPerform(#selector(NSSplitViewController.toggleSidebar(_:)), with: nil)
                }) {
                    Image(systemName: "sidebar.left")
                }
            }
            #endif
        }
        .task {
            await viewModel.fetchDashboardData()
        }
    }
    
    private var activityRings: some View {
        CardView {
            VStack {
                Text("Seasonal Activity")
                    .font(.title2)
                    .fontWeight(.bold)
                    .frame(maxWidth: .infinity, alignment: .leading)
                
                HStack(spacing: 30) {
                    VStack {
                        ActivityRing(
                            progress: viewModel.seasonalProgress,
                            color: Theme.accent,
                            lineWidth: 16
                        )
                        .frame(width: 100, height: 100)
                        .overlay(
                            Text("\(viewModel.watchingCount)/\(viewModel.totalShowsInSeason)")
                                .font(.headline)
                        )
                        Text("Watching")
                            .font(.caption)
                            .foregroundColor(Theme.muted)
                    }
                    
                    VStack {
                        // Placeholder until real data source is available
                        ActivityRing(
                            progress: 0.82,
                            color: Theme.primary,
                            lineWidth: 16
                        )
                        .frame(width: 100, height: 100)
                        .overlay(Text("82%").font(.headline))
                        Text("Coverage")
                            .font(.caption)
                            .foregroundColor(Theme.muted)
                    }
                }
                .padding(.top)
            }
            .foregroundColor(Theme.cardForeground)
        }
    }
    
    private var trendingChart: some View {
        CardView {
            VStack(alignment: .leading) {
                Text("Popularity Trend")
                    .font(.title2)
                    .fontWeight(.bold)
                
                Text("Top 5 Anime Scores")
                    .font(.caption)
                    .foregroundColor(Theme.muted)
                
                TrendChart(data: viewModel.trendChartData, color: Theme.accent)
                    .frame(height: 120)
                    .padding(.top, 10)
            }
            .foregroundColor(Theme.cardForeground)
        }
    }
    
    @ViewBuilder
    private var trendingList: some View {
        let cardContent = VStack(alignment: .leading) {
            Text("Trending Now")
                .font(.title2)
                .fontWeight(.bold)
                .padding(.bottom, 5)
            
            ForEach(viewModel.trendingAnime) { anime in
                HStack {
                    Text(anime.title)
                        .font(.headline)
                        .lineLimit(1)
                    Spacer()
                    HStack(spacing: 4) {
                        Image(systemName: "star.fill")
                            .foregroundColor(Theme.accent)
                        Text(String(format: "%.2f", anime.score ?? 0.0))
                    }
                    .font(.subheadline)
                }
                .padding(.vertical, 4)
                if anime.id != viewModel.trendingAnime.last?.id {
                    Divider().background(Theme.border)
                }
            }
        }
        .foregroundColor(Theme.cardForeground)
        
        let card = CardView {
            cardContent
        }

        if #available(macOS 13.0, *) {
            card.gridCellUnsizedAxes([.vertical])
        } else {
            card
        }
    }
}

struct DashboardView_Previews: PreviewProvider {
    static var previews: some View {
        NavigationView {
            DashboardView()
        }
        .preferredColorScheme(.dark)
    }
}
