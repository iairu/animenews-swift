import SwiftUI

struct AnimeDetailView: View {
    let anime: Anime
    @StateObject private var viewModel: AnimeDetailViewModel

    init(anime: Anime) {
        self.anime = anime
        _viewModel = StateObject(wrappedValue: AnimeDetailViewModel(anime: anime))
    }

    var body: some View {
        ScrollView {
            VStack(alignment: .leading, spacing: 20) {
                header
                
                Divider()
                
                if let trailerURL = anime.trailer?.url, let url = URL(string: trailerURL) {
                    linksSection(trailerURL: url)
                    Divider()
                }
                
                if viewModel.isTracked {
                    trackingSection
                    Divider()
                }
                
                synopsisSection
                
                Divider()
                
                informationSection
                
                Divider()
                
                detailsSection
            }
            .padding()
        }
        .navigationTitle(anime.title)
        .toolbar {
            ToolbarItemGroup(placement: .primaryAction) {
                Button(action: {
                    viewModel.toggleTracking()
                }) {
                    Image(systemName: viewModel.isTracked ? "heart.fill" : "heart")
                        .foregroundColor(viewModel.isTracked ? Theme.accent : .secondary)
                }
                
                Link(destination: URL(string: anime.url)!) {
                    Image(systemName: "safari")
                }
            }
        }
        #if os(iOS)
        .navigationBarTitleDisplayMode(.inline)
        #endif
    }

    private var header: some View {
        HStack(alignment: .top, spacing: 16) {
            AsyncImageView(url: URL(string: anime.images.jpg.largeImageUrl))
                .frame(width: 125, height: 190)
                .background(Color.gray.opacity(0.2))
                .cornerRadius(8)
            
            VStack(alignment: .leading, spacing: 8) {
                Text(anime.title)
                    .font(.title2)
                    .fontWeight(.bold)
                
                Text("\(anime.type ?? "N/A") â€¢ \(anime.year != nil ? String(anime.year!) : "N/A")")
                    .font(.subheadline)
                    .foregroundColor(.secondary)
                
                Text(anime.status ?? "N/A")
                    .font(.subheadline)
                    .foregroundColor(.secondary)
                
                HStack {
                    Image(systemName: "star.fill")
                        .foregroundColor(.yellow)
                    Text(String(format: "%.2f", anime.score ?? 0.0))
                        .font(.headline)
                        .fontWeight(.medium)
                }
                .padding(.top, 4)

                genres
            }
        }
    }
    
    private var genres: some View {
        ScrollView(.horizontal, showsIndicators: false) {
            HStack {
                ForEach(anime.genres) { genre in
                    Text(genre.name)
                        .font(.caption)
                        .fontWeight(.medium)
                        .padding(.horizontal, 10)
                        .padding(.vertical, 5)
                        .background(Theme.accent.opacity(0.2))
                        .cornerRadius(12)
                }
            }
        }
    }
    
    private func linksSection(trailerURL: URL) -> some View {
        VStack(alignment: .leading, spacing: 12) {
            Link(destination: trailerURL) {
                HStack {
                    Image(systemName: "play.rectangle.fill")
                    Text("Watch Trailer")
                }
                .foregroundColor(Theme.accent)
            }
        }
    }

    private var synopsisSection: some View {
        VStack(alignment: .leading, spacing: 8) {
            Text("Synopsis")
                .font(.title3)
                .fontWeight(.semibold)
            
            Text(anime.synopsis ?? "No synopsis available.")
                .font(.body)
                .lineSpacing(4)
        }
    }
    
    private var informationSection: some View {
        VStack(alignment: .leading, spacing: 12) {
            Text("Information")
                .font(.title3)
                .fontWeight(.semibold)

            InfoRow(label: "Type", value: anime.type ?? "N/A")
            InfoRow(label: "Episodes", value: anime.episodes != nil ? "\(anime.episodes!)" : "N/A")
            InfoRow(label: "Status", value: anime.status ?? "N/A")
            InfoRow(label: "Year", value: anime.year != nil ? "\(anime.year!)" : "N/A")
            InfoRow(label: "Rating", value: anime.rating ?? "N/A")
        }
    }
    
    private var detailsSection: some View {
        VStack(alignment: .leading, spacing: 12) {
            Text("Details")
                .font(.title3)
                .fontWeight(.semibold)

            InfoRow(label: "Rank", value: anime.rank != nil ? "#\(anime.rank!)" : "N/A")
            InfoRow(label: "Popularity", value: anime.popularity != nil ? "#\(anime.popularity!)" : "N/A")
            InfoRow(label: "Source", value: anime.source ?? "N/A")
            InfoRow(label: "Broadcast", value: anime.broadcast?.string ?? "N/A")
            
            if let studios = anime.studios, !studios.isEmpty {
                InfoRow(label: "Studios", value: studios.map(\.name).joined(separator: ", "))
            }
            if let producers = anime.producers, !producers.isEmpty {
                InfoRow(label: "Producers", value: producers.map(\.name).joined(separator: ", "))
            }
        }
    }
    
    private var trackingSection: some View {
        VStack(alignment: .leading, spacing: 16) {
            Text("My Progress")
                .font(.title3)
                .fontWeight(.semibold)

            Picker("Status", selection: $viewModel.status) {
                ForEach(TrackedAnime.Status.allCases, id: \.self) { status in
                    Text(status.rawValue).tag(status)
                }
            }
            .pickerStyle(.segmented)
            .onChange(of: viewModel.status) { _ in viewModel.saveChanges() }

            if let totalEpisodes = anime.episodes, totalEpisodes > 0 {
                Stepper(value: $viewModel.watchedEpisodes, in: 0...totalEpisodes) {
                    Text("Episodes: \(viewModel.watchedEpisodes) / \(totalEpisodes)")
                }
                .onChange(of: viewModel.watchedEpisodes) { _ in viewModel.saveChanges() }
            }
            
            HStack {
                Text("My Score")
                Spacer()
                Picker("Score", selection: $viewModel.score) {
                    Text("N/A").tag(0)
                    ForEach(1...10, id: \.self) { score in
                        Text("\(score)").tag(score)
                    }
                }
                .pickerStyle(.menu)
                .onChange(of: viewModel.score) { _ in viewModel.saveChanges() }
            }
        }
    }
}

struct InfoRow: View {
    let label: String
    let value: String
    
    var body: some View {
        HStack(alignment: .firstTextBaseline) {
            Text(label)
                .fontWeight(.medium)
                .frame(width: 100, alignment: .leading)
            Text(value)
                .foregroundColor(.secondary)
            Spacer()
        }
    }
}


